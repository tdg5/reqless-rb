#!/bin/bash

set -e -o pipefail

# From https://stackoverflow.com/a/4774063
REPO_DIR="$( cd -- "$(dirname "$0")/.." >/dev/null 2>&1 ; pwd -P )"

COMMAND="$@"
if [ -z "$COMMAND" ]; then
  COMMAND="bundle exec rspec"
fi

test -f "$REPO_DIR/Gemfile.lock" && rm -f "$REPO_DIR/Gemfile.lock"
redis-cli flushdb
docker build -t qless-rb "$REPO_DIR"
docker run -it --rm --volume $REPO_DIR:/app --network host qless-rb $COMMAND
